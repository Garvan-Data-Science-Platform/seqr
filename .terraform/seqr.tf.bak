resource "kubernetes_deployment" "seqr" {
  metadata {
    name = "seqr"
    labels = {
      App = "seqr"
    }
  }

  spec {
    replicas = 1
    selector {
      match_labels = {
        App = "seqr"
      }
    }
    template {
      metadata {
        labels = {
          App = "seqr"
        }
      }
      spec {
        container {
          image = "gcr.io/seqr-dev-385323/seqr:gcloud-dev"
          name  = "seqr"

          port {
            container_port = 8000
            name = "gunicorn"
          }

          env {
            name = "REDIS_SERVICE_HOSTNAME"
            value = "redis"
          }
          
          #REDIS_SERVICE_PORT

          #POSTGRES_SERVICE_HOSTNAME
          #POSTGRES_SERVICE_PORT
          #POSTGRES_USERNAME
          #POSTGRES_PORT

          #KIBANA_SERVICE_HOSTNAME
          #KIBANA_SERVICE_PORT

          #ELASTICSEARCH_SERVICE_HOSTNAME
          #ELASTICSEARCH_SERVICE_PORT
          #SEQR_ES_PASSWORD

          resources {
            limits = {
              cpu    = "0.5"
              memory = "512Mi"
            }
            requests = {
              cpu    = "250m"
              memory = "50Mi"
            }
          }
        }
      }
    }
  }
}



resource "kubernetes_service" "seqr" {
  metadata {
    name = "seqr"
  }
  spec {
    selector = {
      App = "seqr"
    }
    port {
      port        = 8000
      target_port = 8000
    }

    type = "NodePort"
  }
}



